[Unit]
Description=Weather Station Data Cleanup Timer
Requires=weatherstation-cleanup.service

[Timer]
# Run cleanup daily at 3:00 AM
OnCalendar=daily
OnCalendar=*-*-* 03:00:00

# Run 10 minutes after boot
OnBootSec=10min

# If missed schedule, run immediately
Persistent=true

[Install]
WantedBy=timers.target
